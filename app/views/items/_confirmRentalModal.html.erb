<!-- Modal for confirm rental -->
      <div class="modal fade" id="myModalConfirmRental" role="dialog">
        <div class="modal-dialog">
          <div class="modal-content">
          <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" class="close"
                   data-dismiss="modal">
                       <span aria-hidden="true">&times;</span>
                       <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">
                    Confirm rental
                </h4>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <%= form_with scope: :item, url: confirm_rental_path(:item_id => item.id, :tenant_id => tenant.id), method: "put" do |f| %>
                <div>
                  <%= f.text_area :note, placeholder: "ex: Return date, received money", style: "margin-top: 2%;", :required => true %>
                </div>
                <%= f.submit "Create", :class => "btn btn-default" %>
                <%end%>
            </div>

            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">
                            Close
                </button>
            </div>
          </div>
        </div>
      </div>