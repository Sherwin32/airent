<!-- Modal for create group -->
      <div class="modal fade" id="myModalCreateGroup" role="dialog">
        <div class="modal-dialog">
          <div class="modal-content">
          <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" class="close"
                   data-dismiss="modal">
                       <span aria-hidden="true">&times;</span>
                       <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">
                    Create Group
                </h4>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <%= form_with scope: :group, url: create_group_path, method: "post" do |f| %>
                <div>
                  <%= f.text_field :name, placeholder: "Group name", :required => true, :minlength => 4, :maxlength => 30, :autofocus => true %>
                </div>
                <div>
                  <%= f.text_field :passcode, placeholder: "passcode for people to join", style: "margin-top: 2%;", :required => true %>
                </div>
                <%= f.submit "Create", :class => "btn btn-default" %>
                <%end%>
            </div>

            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">
                            Close
                </button>
            </div>
          </div>
        </div>
      </div>

